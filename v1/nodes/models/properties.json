{
  "uuid": {
    "type": "uuid",
    "description": "Unique UUID for this node.",
    "format": "uuid"
  },
  "type": {
    "type": "string",
    "description": "Type of this node, virt or bare to indicate virtual or bare metal(ironic).",
    "minLength": 1,
    "maxLength": 255
  },
  "image_id": {
    "type": "string",
    "description": "The image name or UUID to use as a base image for this node.",
    "minLength": 1,
    "maxLength": 255,
    "required": true
  },
  "ironic_node_id": {
    "type": "string",
    "description": "The bare metal (ironic) node ID associated with this node.",
    "minLength": 1,
    "maxLength": 255,
    "required": true
  },
  "links": {
    "description": "A list containing a self link and associated links.",
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "description": "The url of a link."
        },
        "rel": {
          "type": "string",
          "description": "The name of a link."
        },
        "type": {
          "type": "string",
          "description": "Indicates the type of document/link."
        }
      }
    }
  }
}
